{% load static %}

.ready-to-work-with-us{:id => "contact-us"}
    {% include "common_partials/section_header.haml" with title="Ready to work with us?" subtext="" %}
    .container
        .row.content_section
            .col-lg-6.col-12{:data-aos => "fade-up", :data-aos-offset => "-100"}
                .inner-section.backdrop
                    %img.background-image.lazyload{:data-src => "{% static 'main_page/images/ready_to_work_with_us/estimate_project/feather_polygon_301x518.png' %}", :alt => "Feather", :title => "Feather"}
                    .estimate-project
                        %img.background-image.lazyload{:data-src => "{% static 'main_page/images/ready_to_work_with_us/estimate_project/estimate_project_background_shape_371x268.png' %}", :alt => "Estimate Project", :title => "Estimate Project"}
                        %span.estimate-project-button-wrapper
                            %a{:class => "btn btn-primary custom-button", :href => "{% url 'estimate_project' %}", :role => "button"}
                                Estimate Project
                        %span.tell-us-about-you
                            Tell us about your project.
                            %br
                            We will contact you within 24h.
            .col-lg-6.col-12{:data-aos => "fade-up", :data-aos-offset => "-100"}
                .inner-section.meet-ceo.text-center
                    .image-cropper
                        %img.lazyload{:data-src => "{% static 'main_page/images/ready_to_work_with_us/adrian_273x273.jpg' %}", :alt => "Adrian Zamorski", :title => "Adrian Zamorski"}
                    %span.contact-label
                        Schedule a 15 minute call
                        %br
                        with our CEO.
                    %span
                        %a{:id=>"talk-with-adrian", :class => "btn btn-primary custom-button", :role => "button"}
                            Talk with Adrian
