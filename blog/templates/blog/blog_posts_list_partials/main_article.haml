{% load wagtailcore_tags %}
{% load thumbnail %}
{% load blog_tag %}
{% load wagtailimages_tags %}

.main-article-container
    .row.main-row
        .col-md-6.article-text-container
            .row.title
                %a.main-article-url{:href => "{% blog_url page.get_main_article.specific.get_proper_url %}"}
                    .main-article-title {{ page.get_main_article.title }}
            .row
                .info-section
                    {% thumbnail page.get_main_article.specific.author.front_image "400x400" as image %}
                        %img.main-img.lazyload{:data-src => "{{ image.url }}"}
                    {% endthumbnail %}
                    .auto-name-and-category
                        .container-section
                            .author-name
                                {{ page.get_main_article.specific.author.name }}
                            .category
                                {% for category in page.get_main_article.get_article_categories %}
                                    %a.category-anchor{:href => "{% blog_url category.name %}"} {{ category }}
                                {% endfor %}
                    .read-time
                        {{ page.get_main_article.specific.read_time }} min read
                    .date
                        {{ page.get_main_article.specific.date }}
            .row.intro-row
                .intro-container
                    {{ page.get_main_article.specific.intro }} [...]
                .read-more
                    %a.read-more-url{:href => "{% blog_url page.get_main_article.specific.get_proper_url %}"}
                        %span.more Read more
        .col-md-6.article-img-container
            .row
                %a.image-url{:href => "{% blog_url page.get_main_article.specific.get_proper_url %}"}
                    {% image page.get_main_article.specific.cover_photo fill-1200x628 %}
